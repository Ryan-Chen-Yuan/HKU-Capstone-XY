/* ========== 基础布局 ========== */
/* 全局容器样式 */
.container {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f7;
  position: relative;
  overflow: hidden;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

/* 主要内容区域 */
.main-content {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  background-color: #f5f5f7;
  width: 100%;
  transition: bottom 0.3s ease;
}

/* 键盘可见时的主内容区域 */
.main-content.keyboard-visible {
  bottom: 0;
  transition: bottom 0.3s ease;
}

/* ========== 导航栏 ========== */
/* 自定义导航栏样式 */
.custom-nav {
  padding: calc(88rpx + env(safe-area-inset-top)) 0 20rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.nav-content {
  max-width: 1200rpx;
  margin: 0 auto;
  padding: 0 30rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
}

/* 导航栏左侧区域 */
.nav-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  min-width: 160rpx;
  position: absolute;
  left: 30rpx;
  z-index: 1;
}

/* 导航栏标题 */
.nav-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 60%;
  padding: 0;
  pointer-events: none;
}

/* ========== 菜单按钮 ========== */
/* 菜单按钮样式 */
.menu-button {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
  border-radius: 35rpx;
  background: rgba(0, 0, 0, 0.05);
  transition: background-color 0.2s ease;
}

/* 菜单按钮点击效果 */
.menu-button:active {
  background: rgba(0, 0, 0, 0.1);
}

/* 菜单图标样式 */
.menu-icon {
  width: 28rpx;
  height: 2rpx;
  background-color: #333;
  border-radius: 1rpx;
}

/* ========== 新建聊天按钮 ========== */
/* 小型新建聊天按钮 */
.new-chat-button-small {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 35rpx;
  background: linear-gradient(135deg, #007AFF, #5856D6);
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

/* 小型新建聊天按钮点击效果 */
.new-chat-button-small:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.2);
}

/* 新建聊天图标 */
.new-chat-icon {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 300;
}

/* ========== 头像气泡 ========== */
/* 可拖动头像气泡样式 */
.floating-avatar {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  border: 3rpx solid #ffffff;
  z-index: 1000;
  transition: transform 0.2s ease;
}

/* 头像拖动时的效果 */
.floating-avatar.dragging {
  transform: scale(1.1);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);
}

/* 头像图片 */
.avatar-image {
  width: 100%;
  height: 100%;
}

/* ========== 聊天区域 ========== */
/* 聊天容器 */
.chat-container {
  height: 100%;
  padding-top: 160rpx;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  overflow-y: auto;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
  width: 100%;
  position: relative;
  transition: padding-top 0.3s ease;
}

/* 键盘可见时的聊天容器 */
.keyboard-visible .chat-container {
  padding-top: 120rpx;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

/* 聊天列表 */
.chat-list {
  padding: 0 30rpx;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  transition: justify-content 0.3s ease;
  width: 100%;
  box-sizing: border-box;
  max-width: 1200rpx;
  margin: 0 auto;
  overflow-x: hidden;
}

/* 有消息时的聊天列表样式 */
.chat-list.has-messages {
  justify-content: flex-end;
  padding-bottom: env(safe-area-inset-bottom);
}

/* ========== 消息样式 ========== */
/* 消息容器基础样式 */
.message {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  animation: fadeIn 0.3s ease-out;
  max-width: 85%;
  padding: 0 10rpx;
  box-sizing: border-box;
  width: fit-content;
  overflow-x: hidden;
}

/* 消息内容样式 */
.message-content {
  padding: 24rpx 30rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  line-height: 1.5;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  max-width: 100%;
  width: fit-content;
  word-break: break-word;
  white-space: pre-wrap;
  box-sizing: border-box;
}

/* 用户消息样式 */
.user-message {
  align-items: flex-end;
  align-self: flex-end;
  margin-left: auto;
}

/* AI助手消息样式 */
.agent-message {
  align-items: flex-start;
  align-self: flex-start;
  margin-right: auto;
}

/* 用户消息内容样式 */
.user-message .message-content {
  background: linear-gradient(135deg, #007AFF, #5856D6);
  color: #ffffff;
  border-bottom-right-radius: 8rpx;
}

/* AI助手消息内容样式 */
.agent-message .message-content {
  background-color: #ffffff;
  color: #333;
  border-bottom-left-radius: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* ========== 加载动画 ========== */
/* 加载中容器 */
.loading-container {
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
}

/* 加载动画点容器 */
.loading-dots {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 加载动画点样式 */
.dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #007AFF;
  border-radius: 50%;
  margin: 0 6rpx;
  animation: bounce 1.4s infinite ease-in-out;
}

/* 加载动画点延迟 */
.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

/* ========== 侧边栏 ========== */
/* 侧边栏背景遮罩 */
.sidebar-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 200;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

/* 显示侧边栏背景遮罩 */
.sidebar-backdrop.show {
  opacity: 1;
  visibility: visible;
}

/* 侧边栏基础样式 */
.sidebar {
  position: fixed;
  top: 0;
  left: -80vw;
  width: 80vw;
  height: 100vh;
  background-color: #ffffff;
  z-index: 300;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  overflow: hidden; /* 确保内容不会溢出 */
}

/* 侧边栏打开状态 */
.sidebar.open {
  transform: translateX(80vw);
}

/* 侧边栏头部 */
.sidebar-header {
  padding: 88rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0; /* 防止头部被压缩 */
}

/* 侧边栏标题 */
.sidebar-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 关闭侧边栏按钮 */
.close-sidebar {
  font-size: 40rpx;
  color: #666;
  padding: 10rpx;
}

/* ========== 历史记录 ========== */
/* 历史记录列表 */
.history-list {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  scrollbar-width: thin;
  scrollbar-color: rgba(0, 122, 255, 0.3) transparent;
}

/* 为Webkit浏览器添加滚动条样式 */
.history-list::-webkit-scrollbar {
  width: 6rpx;
}

.history-list::-webkit-scrollbar-track {
  background: transparent;
}

.history-list::-webkit-scrollbar-thumb {
  background-color: rgba(0, 122, 255, 0.3);
  border-radius: 3rpx;
}

.history-list::-webkit-scrollbar-thumb:hover {
  background-color: rgba(0, 122, 255, 0.5);
}

/* 历史记录项 */
.history-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.history-item:active {
  background-color: #f5f5f7;
}

.history-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}

/* 清除所有对话按钮 */
.clear-all-button {
  display: flex;
  align-items: center;
  padding: 20rpx;
  color: #666;
  font-size: 28rpx;
  border-top: 1rpx solid #eee;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* 事件分析按钮样式 */
.events-button {
  display: flex;
  align-items: center;
  padding: 20rpx;
  color: #666;
  font-size: 28rpx;
  border-top: 1rpx solid #eee;
}

.events-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* ========== 个人信息 ========== */
/* 侧边栏底部个人信息 */
.sidebar-footer {
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: background-color 0.2s ease;
  flex-shrink: 0; /* 防止底部被压缩 */
  background-color: #ffffff; /* 确保背景色 */
  z-index: 1; /* 确保在滚动内容之上 */
}

/* 侧边栏底部点击效果 */
.sidebar-footer:active {
  background-color: #f5f5f7;
}

/* 个人资料图标 */
.profile-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 3rpx solid #ffffff;
}

/* 个人资料图片 */
.profile-image {
  width: 100%;
  height: 100%;
}

/* 用户信息容器 */
.user-info {
  flex: 1;
  overflow: hidden;
}

/* 用户名称 */
.user-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* ========== 输入区域 ========== */
/* 输入区域包装器 */
.input-wrapper {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 15rpx 30rpx;
  background-color: #f5f5f7;
  z-index: 10;
  transition: bottom 0.3s ease, padding 0.3s ease;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.input-wrapper.bottom {
  padding-bottom: calc(15rpx + env(safe-area-inset-bottom));
}

.input-wrapper.center {
  top: 70%;
  transform: translateY(-50%);
  bottom: auto;
  transition: transform 0.3s ease, top 0.3s ease;
}

.input-wrapper.keyboard-visible {
  bottom: 0;
  transform: none;
  top: auto;
}

/* 居中输入容器样式 */
.center .input-container {
  background: #ffffff;
  padding: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

/* 输入容器 */
.input-container {
  width: 100%;
  max-width: 1200rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
}

/* 消息输入框 */
.message-input {
  flex: 1;
  height: 70rpx;
  background-color: #f5f5f7;
  border-radius: 35rpx;
  padding: 0 25rpx;
  font-size: 28rpx;
  color: #333;
  border: none;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
  z-index: 1001;
}

/* 居中输入框样式 */
.center .message-input {
  background-color: #f5f5f7;
  height: 80rpx;
  font-size: 32rpx;
}

/* 输入框焦点状态 */
.message-input:focus {
  background-color: #ffffff;
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.05), 0 0 0 2rpx rgba(0, 122, 255, 0.3);
}

/* 发送按钮 */
.send-button {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  background: linear-gradient(135deg, #007AFF, #5856D6);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  border: none;
  padding: 0;
  line-height: 1;
}

/* 居中发送按钮样式 */
.center .send-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

/* 发送按钮点击效果 */
.send-button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.2);
}

/* 发送按钮文本 */
.send-button text {
  color: #ffffff;
  font-size: 32rpx;
}

/* AI免责声明 */
.ai-disclaimer {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
  text-align: center;
}

/* ========== 勋章展示 ========== */
/* 勋章展示架 */
.medal-display {
  position: fixed;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  z-index: 1000;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  cursor: pointer;
  touch-action: none;
  will-change: transform;
  -webkit-user-select: none;
  user-select: none;
  max-width: 120rpx;
  max-height: 120rpx;
  box-sizing: border-box;
}

/* 勋章展示架拖动状态 */
.medal-display.dragging {
  transform: scale(1.1);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);
  transition: none;
}

/* 勋章容器 */
.medal-container {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: linear-gradient(135deg, #ffd700, #ffa500);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  border: 3rpx solid #ffffff;
  animation: rotate 10s linear infinite;
}

/* 勋章容器发光效果 */
.medal-container:before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0) 70%);
  opacity: 0.6;
  z-index: 1;
  animation: glow 2s infinite;
}

/* 勋章样式 */
.medal {
  width: 60rpx;
  height: 60rpx;
  margin: 0 -10rpx;
  position: relative;
  z-index: 2;
  animation: float 3s ease-in-out infinite;
}

/* 勋章动画延迟 */
.medal:nth-child(2) {
  animation-delay: 0.2s;
}

.medal:nth-child(3) {
  animation-delay: 0.4s;
}

/* 勋章图片 */
.medal-image {
  width: 100%;
  height: 100%;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

/* ========== 欢迎界面 ========== */
/* 欢迎界面容器 */
.welcome-container {
  width: 100%;
  max-width: 1200rpx;
  margin: 0 auto;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.5s ease-out;
  margin-top: -180rpx;
  min-height: 50vh;
  transition: margin-top 0.3s ease, min-height 0.3s ease;
}

/* 键盘可见时的欢迎界面容器 */
.keyboard-visible .welcome-container {
  margin-top: -180rpx;
  min-height: 40vh;
}

/* 欢迎界面图标 */
.welcome-icon {
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 40rpx;
  border-radius: 70rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.2);
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #ffffff;
  transition: transform 0.3s ease, margin-bottom 0.3s ease;
}

/* 键盘可见时的欢迎界面图标 */
.keyboard-visible .welcome-icon {
  margin-bottom: 40rpx;
}

/* 欢迎界面图标悬停效果 */
.welcome-icon:hover {
  transform: scale(1.05);
}

/* 欢迎界面图标图片 */
.welcome-icon image {
  width: 100rpx;
  height: 100rpx;
  object-fit: contain; /* 确保图片不变形 */
}

/* 欢迎界面标题 */
.welcome-title {
  font-size: 42rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
  letter-spacing: 1rpx;
}

/* 欢迎界面副标题 */
.welcome-subtitle {
  font-size: 30rpx;
  color: #666;
  text-align: center;
  max-width: 600rpx;
  margin: 0 auto;
  line-height: 1.5;
  letter-spacing: 0.5rpx;
}

/* ========== 动画 ========== */
/* 消息淡入动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 加载动画关键帧 */
@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* 勋章旋转动画 */
@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 发光动画 */
@keyframes glow {
  0% {
    opacity: 0.3;
    transform: scale(0.8);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.2);
  }
  100% {
    opacity: 0.3;
    transform: scale(0.8);
  }
}

/* ========== 小怪兽样式 ========== */
/* 小怪兽基础样式 */
.monster {
  position: fixed;
  width: 120rpx;
  height: 120rpx;
  z-index: 9999;
  transition: all 0.3s ease;
}

.monster.keyboard-visible {
  transition: all 0.3s ease;
  transform: translateY(-100rpx);
}

/* 小怪兽身体 */
.monster-body {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #FF9500, #FF5E3A);
  border-radius: 50%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  z-index: 9999; /* 确保身体部分也有高z-index */
}

/* 小怪兽面部特征 */
.monster-face {
  width: 80%;
  height: 80%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 10000; /* 确保脸部在身体之上 */
}

/* 基础浮动动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

/* 跳跃动画 */
@keyframes jump {
  0%, 100% {
    transform: translateY(0) scale(1, 1);
  }
  40% {
    transform: translateY(-30rpx) scale(0.9, 1.1);
  }
  60% {
    transform: translateY(-40rpx) scale(1.1, 0.9);
  }
  80% {
    transform: translateY(-20rpx) scale(0.95, 1.05);
  }
}

/* 摇摆动画 */
@keyframes wiggle {
  0%, 100% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(-8deg);
  }
  75% {
    transform: rotate(8deg);
  }
}

/* 旋转跳跃动画 */
@keyframes spinJump {
  0% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-30rpx) rotate(180deg);
  }
  100% {
    transform: translateY(0) rotate(360deg);
  }
}

/* 开心弹跳动画 */
@keyframes happyBounce {
  0%, 100% {
    transform: scale(1);
  }
  30% {
    transform: scale(1.1, 0.9);
  }
  60% {
    transform: scale(0.9, 1.1);
  }
}

/* 困倦摇晃动画 */
@keyframes sleepyWobble {
  0%, 100% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(-5rpx) rotate(-5deg);
  }
  75% {
    transform: translateX(5rpx) rotate(5deg);
  }
}

/* 生气抖动动画 */
@keyframes angryShake {
  0%, 100% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(-10rpx);
  }
  75% {
    transform: translateX(10rpx);
  }
}

/* 悲伤颤抖动画 */
@keyframes sadShiver {
  0%, 100% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(-3deg);
  }
  75% {
    transform: rotate(3deg);
  }
}

/* 应用动画到小怪兽 */
.monster {
  animation: float 3s ease-in-out infinite;
}

.monster.jumping {
  animation: jump 1s cubic-bezier(0.36, 0, 0.66, -0.56) infinite;
}

.monster.wiggling {
  animation: wiggle 1s ease-in-out infinite;
}

.monster.spinning {
  animation: spinJump 1.5s cubic-bezier(0.68, -0.55, 0.265, 1.55) infinite;
}

/* 情绪状态动画 */
.monster.happy {
  animation: happyBounce 1s ease-in-out infinite;
}

.monster.sleepy {
  animation: sleepyWobble 3s ease-in-out infinite;
}

.monster.angry {
  animation: angryShake 0.5s ease-in-out infinite;
}

.monster.sad {
  animation: sadShiver 2s ease-in-out infinite;
}

/* 拖动状态 */
.monster.dragging {
  animation: none;
  transform: scale(1.1);
  transition: none;
}

/* 情绪切换时的过渡效果 */
.monster-body {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 眼睛和嘴巴的动画 */
@keyframes blink {
  0%, 100% {
    transform: scaleY(1);
  }
  50% {
    transform: scaleY(0.1);
  }
}

.monster-eye {
  animation: blink 3s ease-in-out infinite;
}

.monster-eye.right {
  animation-delay: 0.3s;
}

/* 嘴巴动画 */
@keyframes mouthMove {
  0%, 100% {
    transform: scaleY(1);
  }
  50% {
    transform: scaleY(0.5);
  }
}

.monster-mouth {
  animation: mouthMove 2s ease-in-out infinite;
}

/* 情绪状态下的眼睛和嘴巴变化 */
.monster.happy .monster-mouth {
  animation: mouthMove 1s ease-in-out infinite;
  height: 30rpx;
  border-radius: 20rpx;
}

.monster.sad .monster-mouth {
  animation: none;
  transform: translateY(5rpx) scaleY(0.5);
}

.monster.angry .monster-eye {
  animation: none;
  height: 20rpx;
  transform: rotate(-15deg);
}

.monster.sleepy .monster-eye {
  animation: blink 5s ease-in-out infinite;
}

/* 情绪点指示器 */
.emotion-indicator {
  position: absolute;
  bottom: -10rpx;
  left: 10%;
  width: 80%;
  height: 6rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 3rpx;
  overflow: hidden;
  display: flex;
  z-index: 10001; /* 确保情绪指示器在最上层 */
}

.emotion-bar {
  height: 100%;
  transition: width 0.3s ease;
}

.emotion-bar.happy {
  background: #FFD700;
}

.emotion-bar.sad {
  background: #4169E1;
}

.emotion-bar.angry {
  background: #FF4500;
}

.emotion-bar.sleepy {
  background: #8A2BE2;
}

/* 勋章奖励提示 */
.medal-reward {
  position: fixed;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%) translateY(200rpx);
  z-index: 20;
  transition: all 0.3s ease;
}

.medal-reward.show {
  transform: translateX(-50%) translateY(0);
}

.medal-reward.keyboard-visible {
  bottom: 120rpx;
}

.reward-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.reward-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  background: linear-gradient(135deg, #ffd700, #ffa500);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  animation: pulse 1.5s infinite;
}

.reward-icon image {
  width: 70%;
  height: 70%;
}

.reward-text {
  flex: 1;
}

.reward-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.reward-name {
  font-size: 28rpx;
  color: #666;
}

/* 勋章陈列架 */
.medal-display-case {
  position: fixed;
  bottom: calc(180rpx + env(safe-area-inset-bottom));
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 99;
  backdrop-filter: blur(10px);
}

.medal-shelf {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  justify-content: center;
}

.medal-item {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.medal-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ffd700, #ffa500);
  padding: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.medal-name {
  font-size: 20rpx;
  color: #666;
  text-align: center;
  margin-top: 5rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

/* 不同情绪下的身体样式 */
.monster.happy .monster-body {
  background: linear-gradient(135deg, #FFB6C1, #FF69B4);
  transform: scale(1.05);
}

.monster.sad .monster-body {
  background: linear-gradient(135deg, #87CEEB, #4169E1);
  transform: scale(0.95);
}

.monster.angry .monster-body {
  background: linear-gradient(135deg, #FF6347, #FF4500);
  transform: scale(1.1);
}

.monster.sleepy .monster-body {
  background: linear-gradient(135deg, #DDA0DD, #8A2BE2);
  transform: scale(0.9);
}

/* 小怪兽面部特征 */
.monster-face {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  height: 80%;
  z-index: 10000; /* 确保脸部在身体之上 */
}

.monster-eyes {
  display: flex;
  justify-content: space-around;
  width: 70%;
  margin-bottom: 15rpx;
}

.monster-eye {
  width: 16rpx;
  height: 16rpx;
  background: #333;
  border-radius: 50%;
  position: relative;
  transition: all 0.3s ease;
}

.monster-eye:before {
  content: '';
  position: absolute;
  width: 6rpx;
  height: 6rpx;
  background: #fff;
  border-radius: 50%;
  top: 2rpx;
  left: 2rpx;
}

.monster-mouth {
  width: 40rpx;
  height: 20rpx;
  background: #333;
  border-radius: 20rpx;
  position: relative;
  transition: all 0.3s ease;
}

/* 情绪特定的面部表情 */
.monster.happy .monster-mouth {
  width: 50rpx;
  height: 30rpx;
  border-radius: 0 0 25rpx 25rpx;
  background: #FF69B4;
}

.monster.happy .monster-eye {
  height: 20rpx;
  background: #333;
  transform: scale(1.2);
}

.monster.sad .monster-mouth {
  width: 30rpx;
  height: 10rpx;
  border-radius: 25rpx 25rpx 0 0;
  background: #4169E1;
  transform: translateY(10rpx);
}

.monster.sad .monster-eye {
  transform: rotate(-10deg) scaleY(0.5);
}

.monster.angry .monster-mouth {
  width: 45rpx;
  height: 15rpx;
  background: #FF4500;
  transform: rotate(-10deg);
}

.monster.angry .monster-eye {
  transform: rotate(-15deg) scaleY(1.5);
  background: #FF4500;
}

.monster.sleepy .monster-mouth {
  width: 35rpx;
  height: 8rpx;
  background: #8A2BE2;
  transform: translateY(-5rpx);
}

.monster.sleepy .monster-eye {
  transform: scaleY(0.3);
  background: #8A2BE2;
}

/* 添加光晕效果 */
.monster-body:before {
  content: '';
  position: absolute;
  top: -5rpx;
  left: -5rpx;
  right: -5rpx;
  bottom: -5rpx;
  border-radius: 50%;
  background: inherit;
  filter: blur(10rpx);
  opacity: 0.5;
  z-index: -1;
}

/* 添加阴影效果 */
.monster-body:after {
  content: '';
  position: absolute;
  width: 100%;
  height: 20rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  bottom: -10rpx;
  filter: blur(4rpx);
  animation: shadowMove 3s ease-in-out infinite;
}

@keyframes shadowMove {
  0%, 100% {
    transform: scaleX(1);
    opacity: 0.3;
  }
  50% {
    transform: scaleX(0.8);
    opacity: 0.2;
  }
}

/* ========== 勋章气泡 ========== */
.medal-bubble {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ffd700, #ff9800);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  z-index: 1000;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  cursor: pointer;
  touch-action: none;
  will-change: transform;
  -webkit-user-select: none;
  user-select: none;
}

.medal-bubble.dragging {
  transform: scale(1.1);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.3);
  transition: none;
}

.medal-bubble-inner {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border: 2rpx solid #fff8e1;
}

.medal-bubble-icon {
  width: 60rpx;
  height: 60rpx;
  display: block;
}

/* 键盘显示时的位置调整 */
.medal-bubble.keyboard-visible {
  margin-bottom: 220rpx;
}

/* 添加闪光动画 */
@keyframes shimmer {
  0% {
    background-position: -100% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

.medal-bubble::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, rgba(255,255,255,0) 0%, rgba(255,255,255,0.3) 50%, rgba(255,255,255,0) 100%);
  background-size: 200% 100%;
  border-radius: 50%;
  animation: shimmer 2s infinite;
  pointer-events: none;
}

/* 点击效果 */
.medal-bubble:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* 事件气泡样式 */
.event-bubble {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
  transition: transform 0.2s ease;
  transform: translateZ(0);
}

.event-bubble.dragging {
  transform: scale(1.1);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.event-bubble-inner {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  overflow: hidden;
}

.event-bubble-icon {
  width: 60%;
  height: 60%;
  object-fit: contain;
}

.event-bubble.keyboard-visible {
  transform: translateY(-50%);
}