@keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 无数据提示 */
.no-data {
  text-align: center;
  padding: 48rpx 0;
  color: #999999;
  font-size: 28rpx;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 16rpx 24rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  z-index: 100;
}

.nav-button {
  background: #07C160;
  color: #FFFFFF;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  min-width: 240rpx;
  text-align: center;
  transition: opacity 0.3s;
}

.nav-button:active {
  opacity: 0.8;
}

/* 自定义导航栏 */
.custom-nav {
  padding: calc(88rpx + env(safe-area-inset-top)) 0 20rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.nav-content {
  max-width: 1200rpx;
  margin: 0 auto;
  padding: 0 30rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
}

.nav-left {
  display: flex;
  align-items: center;
  position: absolute;
  left: 30rpx;
  z-index: 1;
}

.back-button {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 35rpx;
  background: rgba(0, 0, 0, 0.05);
  transition: background-color 0.2s ease;
}

.back-button:active {
  background: rgba(0, 0, 0, 0.1);
}

.back-icon {
  font-size: 36rpx;
  color: #333;
}

.nav-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 60%;
  padding: 0;
  pointer-events: none;
} 