.container {
  padding: 24rpx;
  padding-bottom: 120rpx; /* 为底部导航留出空间 */
  background: #F7F7F7;
  min-height: 100vh;
  box-sizing: border-box;
  width: 100%;
}

.events-list {
  padding-bottom: 24rpx;
  width: 100%;
  max-width: 960rpx;
  margin: 0 auto;
  padding: 160rpx 30rpx 0 30rpx;
}

/* 加载状态 */
.loading-more {
  text-align: center;
  padding: 24rpx 0;
  color: #999999;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

