}

.suggestions-section {
  margin-bottom: 20px;
}

.suggestions-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.home-button {
  width: 100%;
  background-color: #4caf50;
  color: #ffffff;
  padding: 10px;
  border-radius: 5px;
  text-align: center;
}

